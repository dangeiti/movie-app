extends ./layout.pug
block content
  h2 This is a form that you can use to find Movie by Specific Rating
  .container
    form(method='POST' action='/individualRating' class="movie-container")
      div.form-group
        h4 Choose rating from 1 to 5
        input(type="number" id="quantity" name="rating" min="1" max="5" value="0")
        label(for='quantity')
      button.btn.btn-primary.fullWidth.margin-top(type='submit') Find


