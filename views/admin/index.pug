extends ../layout.pug

block content
    a(href="/admin/create" class="btn btn-primary margin-right") Create Movie
        i.las.la-plus.ml-2
    a(href="/deleteAll" class="btn btn-danger margin-right") Delete all movies
        i.las.la-trash.ml-2
    a(href="/" class="btn btn-info") Go back
        i.las.la-home.ml-2
    
    div.movie-container.container-fluid
        table.table.table-hover
            thead
                tr
                    th(scope="col" class="table-primary") Title
                    th(scope="col" class="table-info") Description
                    th(scope="col" class="table-info") Category
                    th(scope="col" class="table-info") Rating
                    th(scope="col" class="table-info") Create
            each movie in movies
                    tbody
                        tr
                            td(scope="col")= movie.title
                            td(scope="col")= movie.description
                            td(scope="col")= movie.category
                            td(scope="col")= movie.rating
                            td(scope="col")= movie.created
                                a(href="/admin/movie/" + movie._id class="btn btn-info margin-left" ) Select 
    
